import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

# Sample student marks data
data = {
    'Mathematics': [55, 60, 65, 70, 75, 80, 85, 90, 95],
    'Science':     [58, 63, 67, 72, 78, 82, 88, 92, 97]
}

df = pd.DataFrame(data)

print("Student Performance Data:\n")
print(df)

# Calculate correlation
correlation = df['Mathematics'].corr(df['Science'])
print("\nCorrelation between Mathematics and Science:", correlation)

# Create scatter plot
plt.figure(figsize=(8,6))
plt.scatter(df['Mathematics'], df['Science'])

# Add regression line
m, b = np.polyfit(df['Mathematics'], df['Science'], 1)
plt.plot(df['Mathematics'], m*df['Mathematics'] + b)

# Labels and title
plt.title("Mathematics vs Science Performance")
plt.xlabel("Mathematics Marks")
plt.ylabel("Science Marks")

plt.grid(True)
plt.show()
