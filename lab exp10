import pandas as pd
import numpy as np

# Create DataFrame with random values (including negatives)
np.random.seed(0)  # For reproducibility

df = pd.DataFrame(
    np.random.randint(-100, 100, size=(10, 4)),
    columns=['A', 'B', 'C', 'D']
)

print("Original DataFrame:\n")
print(df)

# Function to color negative numbers red and positive numbers black
def color_numbers(val):
    if val < 0:
        return 'color: red'
    else:
        return 'color: black'
